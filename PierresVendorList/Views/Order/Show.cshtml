<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h1>Vendor Details:</h1>
      <h2>@Model.Name</h2>
      <p>@Model.Description</p>
      <p>Vendor ID Number: @Model.ID</p>
    </div>
    <div class="col-md-8">
      <div class="order">
        <h2>Invoice Number: @Model.Order.InvoiceNumber</h2>
        <h3>@Model.Order.Title</h3>
        <h4></h4>
        <p>@Model.Order.Description</p>
        <h5></h5>
      </div>


      <a href="/order/new">Add another item</a>
      <a href='/items'>View all items</a>
    </div>
  </div>
</div>