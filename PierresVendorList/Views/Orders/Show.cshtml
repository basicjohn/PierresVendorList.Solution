@{
  Layout = "_Layout";
}
@using PierresVendorList.Models;
<main class="container">
  <div class="row">
    <div class="col-md-4">
      <h1>Vendor Details:</h1>
      <h2>
        @Model["order"].Name</h2>
      <p>@Model["order"].Description</p>
      <p>Vendor ID Number: @Model["vendor"].vendorId</p>
    </div>
    <div class="col-md-8">
      @foreach (Order order in @Model["order"])
      {
        <div class="order">
          <h2>Invoice Number: @order.InvoiceNumber -- Order Date: @order.Date</h2>
          <h3>@order.Title</h3>
          <p>@order.Description</p>
          <h4>Order Total: @order.Total</h4>
        </div>
      }
      <p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order</a></p>
      <a href="/orders/new">Add another order</a>
      <a href='/orders'>View all orders</a>
    </div>
  </div>
</main>
