@{
  Layout = "_Layout";
}
@using PierresVendorList.Models;

<main class="container display-results">
  <h1>Pierres Vendor List</h1>
  @if (Model.Count == 0)
  {
    <p>There are no orders attached to this vendor. Please click "Add Order" below to add the first!</p>
  }
  else
  {
    <ul>
      @foreach (Order order in Model)
      {
        <li><a href='/order/@order.InvoiceNumber'>@order.Title</a></li>
      }
    </ul>
  }
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-6">
        <a class="btn btn-dark" type="button" role="button" href="/orders/new">Add Order</a>
      </div>
      <div class="col-md-6">
        <form action="/order/delete" method="post">
          <button class="btn btn-dark" type="submit" name="button">Clear All Orders</button>
        </form>
      </div>
    </div>
  </div>
</main>
