@{
  Layout = "_Layout";
}
@using PierresVendorList.Models;

<main class="container">
  <h1>Vendors</h1>
  @if (@Model.Count == 0)
  {
    <h3>No Vendors have been added yet!</h3>
  }
  else
  {
    @foreach (Vendor vendor in Model)
    {
      <h3><a href='/vendors/@vendor.vendorId'>@vendor.Name</a></h3>
      <p><a href='/vendors/@vendor.vendorId'>@vendor.Description</a></p>
      <a href='/vendors/@vendor.vendorId'>View Vendor Details</a>
    }
  }
  <p><a href='/'>Back home</a></p>
</main>
