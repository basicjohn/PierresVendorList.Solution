@{
  Layout = "_Layout";
}

<main class="container">

  <h1>Create a New Vendor</h1>
  <h2>Fill out the form information and submit to add a new vendor</h2>
  <form action="/vendors" method="post">
    <label for="Name">Name</label>
    <input id="Name" name="Name" type="text">
    <label for="Description">Description</label>
    <input id="Description" name="Description" type="text">
    <button type="submit">Add</button>
  </form>
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-6">
        <a class="btn btn-dark" href='..' role="button">Back Home</a>
      </div>
      <div class="col-md-6">
        <a class="btn btn-dark" href='/vendors' role="button" type="button">Back to Vendors</a>
      </div>
    </div>
  </div>
</main>